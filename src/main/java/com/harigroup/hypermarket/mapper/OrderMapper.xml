<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.harigroup.hypermarket.mapper.IOrderMapper">


    <select id="getAllOrder" resultType="com.harigroup.hypermarket.pojo.Orderform">
       select * from tb_orderform where u_id =#{u_id} order by order_time desc
    </select>


    <insert id="releaseOrder" parameterType="com.harigroup.hypermarket.pojo.Orderform">
         insert into tb_orderform values(default,#{u_id},#{g_id},#{order_time},#{o_number},#{price},#{pay_status})
    </insert> 

    
    <delete id="delOrderById" parameterType="com.harigroup.hypermarket.pojo.Orderform">
        delete from tb_orderform where o_id =#{o_id} 
    </delete>


</mapper>



    
    